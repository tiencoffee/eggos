			inset 0
			display flex
			justify-content center
			align-items center
			font-family 'Font Awesome 5 Pro'
			font-weight 900
			color #fff
			content '\f00c'
.Radio_label
.Checkbox_label
	margin-left 8px

.Select
	position relative
	height 24px
	padding 0 8px
	border solid 1px #0006
	display inline-flex
	align-items center
	background gray1
.Select_text
	margin-right 8px
